{
  "name": "kill-the-vc",
  "version": "1.0.0",
  "description": "Kill the VC - Hand Gesture Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=assets/icon.ico --prune=true --out=release-builds --version-string.CompanyName=YourCompany --version-string.FileDescription=KillTheVC --version-string.ProductName=\"Kill the VC\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icon.png --prune=true --out=release-builds"
  },
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}
